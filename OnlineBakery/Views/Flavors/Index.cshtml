@{
  Layout = "_Layout";
}

@using OnlineBakery.Models;
@model List<OnlineBakery.Models.Flavor>;

@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-plus" })
<hr />
<p>Flavors</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <p>No Flavors have been added yet!</p>
    } 

    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </div>  
</div>
<hr />