@{
  Layout = "_Layout";
}

@using OnlineBakery.Models;
@model List<OnlineBakery.Models.Cart>;

<hr />
<p>History of Purchase</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Any())
    {
      
      <table>
      @{int a = 0;
        @for(int i = 0; i < Model.Count; i++)
        {
          <tr>
          @if (Model[i].OrderId != a)
          {
            @Html.ActionLink($"{Model[i].OrderId}", "Details", new { id = Model[i].OrderId })
            a = Model[i].OrderId;
          }
          </tr>
        }
      }
      </table>
    }
    else
    {
      <p>No Receipts Availible</p>
    }
  </div>  
</div>
<hr />