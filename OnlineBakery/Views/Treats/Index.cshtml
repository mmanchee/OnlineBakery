@{
  Layout = "_Layout";
}

@using OnlineBakery.Models;
@model List<OnlineBakery.Models.Treat>;

@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-plus" })
<hr />
<p>Treats</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <p>No Treats have been added yet!</p>
    } 

    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
    }
  </div>  
</div>
<hr />